{
  "compilerOptions": {
    "incremental": true,
    "inlineSourceMap": true,
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext.asynciterable"
    ],
    "module": "commonjs",
    "noUnusedLocals": true,
    "strict": true,
    "target": "es2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist"
  },
  "exclude": ["node_modules"],
  "include": ["src/*.ts"]
}